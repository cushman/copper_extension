{
  "name": "Louder",
  "manifest_version": 2,
  "version": "0.1.0",
  "description": "Promote anything online",
  "background": { "scripts": ["background.js"] },
  "homepage_url": "https://louder.is/",
  "icons": { "16": "logo16.png",
             "48": "logo48.png",
            "128": "logo128.png"
  },
  "browser_action": {
     "default_icon": {
       "19": "button19.png",
       "38": "button38.png"
     },
     "default_title": "tip this page"
   },
  "permissions": [
    "tabs", "<all_urls>"
  ]

}
